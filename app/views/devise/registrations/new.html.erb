            </div>
            <div class="form-group">
              <%= f.label :Nom %><br />
              <%= f.text_field :last_name %>
            </div>
            <div class="form-group">
              <%= f.label :Description %><br />
              <%= f.text_area :description %>
            </div>

            <div class="form-group">
              <%= f.label :email %><br />
